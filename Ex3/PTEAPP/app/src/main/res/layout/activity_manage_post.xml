<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent">
    an

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        app:layout_constraintBaseline_toBaselineOf="@+id/find"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/find"
        android:layout_width="89dp"
        android:layout_height="48dp"
        android:text="Find"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/home"
        android:layout_marginTop="1dp" />

    <Button
        android:id="@+id/post"
        android:layout_width="91dp"
        android:layout_height="48dp"
        android:text="SET POST"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="107dp"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginRight="107dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="94dp"
        app:layout_constraintRight_toRightOf="@+id/setting"
        app:layout_constraintLeft_toLeftOf="@+id/find"
        android:layout_marginLeft="94dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/find" />

    <Button
        android:id="@+id/setting"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="SETTING"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/find"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="4dp" />
    <Button
        android:id="@+id/view_post"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:text="Xem Danh Sách Bài Đăng"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/new_post"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp" />



    <Button
        android:id="@+id/new_post"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Đăng bài mới"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/view_post"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="264dp"
        app:layout_constraintLeft_toLeftOf="@+id/view_post"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
