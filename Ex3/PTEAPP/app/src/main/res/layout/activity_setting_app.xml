<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="vn.khoapham.manager.SettingApp">

    <Button
        android:id="@+id/login"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="80dp"
        android:text="Đăng Nhập"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/logout"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="80dp"
        android:text="Đăng Xuất"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        app:layout_constraintBaseline_toBaselineOf="@+id/find"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/find"
        android:layout_width="89dp"
        android:layout_height="48dp"
        android:text="Find"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/home"
        android:layout_marginTop="1dp" />

    <Button
        android:id="@+id/post"
        android:layout_width="91dp"
        android:layout_height="48dp"
        android:text="SET POST"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="106dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginRight="106dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="95dp"
        app:layout_constraintRight_toRightOf="@+id/setting"
        app:layout_constraintLeft_toLeftOf="@+id/find"
        android:layout_marginLeft="95dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/setting"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="SETTING"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/find"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="4dp" />


    <Button
        android:id="@+id/signup"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:text="Đăng kí"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="28dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/post"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="28dp" />


</android.support.constraint.ConstraintLayout>
