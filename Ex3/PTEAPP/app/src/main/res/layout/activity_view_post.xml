<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        app:layout_constraintBaseline_toBaselineOf="@+id/find"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/find"
        android:layout_width="89dp"
        android:layout_height="48dp"
        android:text="Find"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/home"
        android:layout_marginTop="1dp" />

    <Button
        android:id="@+id/post"
        android:layout_width="91dp"
        android:layout_height="48dp"
        android:text="SET POST"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="106dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginRight="106dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="95dp"
        app:layout_constraintRight_toRightOf="@+id/setting"
        app:layout_constraintLeft_toLeftOf="@+id/find"
        android:layout_marginLeft="95dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/setting"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="SETTING"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/find"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="4dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="181dp"
        android:layout_height="28dp"
        android:text="Xem Danh Sách Bài Đăng"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintRight_toRightOf="@+id/home"
        app:layout_constraintTop_toBottomOf="@+id/home"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/home"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ListView
        android:id="@+id/listView_post"
        android:layout_width="390dp"
        android:layout_height="429dp"
        android:layout_marginTop="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.060000002"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginBottom="46dp"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

</android.support.constraint.ConstraintLayout>
